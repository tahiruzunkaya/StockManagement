
@{
  Layout = null;
}
@{
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="~/vendor/jquery/dist/jquery.js"></script>
  <script src="~/vendor/jquery-validation/dist/jquery.validate.js"></script>
  <script src="~/vendor/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
  <link href="~/vendor/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <link href="~/vendor/static/css/dino.css" rel="stylesheet" />
  <script src="~/vendor/static/js/dino.js"></script>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
  <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.js"></script>
  <link rel="stylesheet" href="~/vendor/static/css/style.css">
  <style>
    .myvalidation {
      margin: 0px auto;
    }

      .myvalidation li {
        list-style: none;
        color: red;
      }
  </style>
  <title>Stok Takip </title>
</head>
<body>
  <div id="root">
    <div class="wrapper">
      <div class="sidebar" style="position:fixed; overflow:hidden">
        <div class="sidebar-wrapper">
          <div class="logo">

            <a href="#" class="simple-text logo-normal" target="_blank">Yazılım Sınama</a>
          </div>
          <ul class="nav">
            <li class="active">
              <a class="nav-link active" href="/Home" aria-current="page">
                <p>Dashboard</p>
              </a>
            </li>
            @if (User.IsInRole("admin"))
            {
              <li class="">
                <a class="nav-link" href="/CalisanYonet">
                  <p>Çalışan Yönet</p>
                </a>
              </li>
            }
            @if (User.IsInRole("satis") || User.IsInRole("admin"))
            {
              <li class="">
                <a class="nav-link" href="/SatinAlma">
                  <p>Satın Alma</p>
                </a>
              </li>
            }

            @if (User.IsInRole("admin"))
            {
              <li class="">
                <a class="nav-link" href="/Stok">
                  <p>Stoklar</p>
                </a>
              </li>
            }
            @if (User.IsInRole("admin") || User.IsInRole("bolumy"))
            {
              <li class="">
                <a class="nav-link" href="/Zimmet">
                  <p>Zimmetler</p>
                </a>
              </li>
            }
            @if (User.IsInRole("admin"))
            {
              <li class="">
                <a class="nav-link" href="/Atik">
                  <p>Atiklar</p>
                </a>
              </li>
            }

          </ul>
        </div>
      </div>
      <div class="main-panel">
        <nav class="navbar-absolute navbar-transparent navbar navbar-expand-lg">
          <div class="container-fluid">
            <div class="navbar-wrapper">
              <div class="navbar-toggle d-inline">
                <button class="navbar-toggler" type="button">
                  <span class="navbar-toggler-bar bar1"></span>
                  <span class="navbar-toggler-bar bar2"></span>
                  <span class="navbar-toggler-bar bar3"></span>
                </button>
              </div>
              <a href="#" class="navbar-brand">Dashboard</a>
            </div>
            <button aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navigation"
                    data-toggle="collapse" id="navigation" type="button">
              <span class="navbar-toggler-bar navbar-kebab"></span>
              <span class="navbar-toggler-bar navbar-kebab"></span>
              <span class="navbar-toggler-bar navbar-kebab"></span>
            </button>
            <div class="collapse navbar-collapse">
              <ul class="ml-auto navbar-nav">
                <li class="dropdown nav-item">
                  <a data-toggle="dropdown" aria-haspopup="true" href="#" class="dropdown-toggle nav-link"
                     aria-expanded="false">
                    <div class="photo">
                      <img alt="..." src="/vendor/static/img/settings.png">
                    </div>
                    <b class="caret d-none d-lg-block d-xl-block"></b>
                    <p class="d-lg-none">Log out</p>
                  </a>
                  <ul tabindex="-1" role="menu" aria-hidden="true" class="dropdown-navbar dropdown-menu dropdown-menu-right">
                    <li tabindex="-1" class="dropdown-divider"></li>
                    <li class="nav-link">
                      <a href="/Account/Logout"><button type="button" tabindex="0" class="nav-item dropdown-item">Log out</button></a>
                    </li>
                  </ul>
                </li>
                <li class="separator d-lg-none"></li>
              </ul>
            </div>
          </div>
        </nav>
        <div class="content">
          <div class="row">

            @RenderBody()
          </div>
        </div>
        <footer class="footer">
          <div class="container-fluid">
            <h5 style="text-align:center">YAZILIM SINAMA PROJESİ</h5>
          </div>
        </footer>
      </div>
    </div>
  </div>

</body>
</html>
